@model StoreFront.Data.Address_table

@{
    ViewBag.Title = "PlaceOrder";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@using (Html.BeginForm("ConfirmOrder", "Order", FormMethod.Post))
{
    <div class="jumbotron" style="border-style: dashed double dashed double; border-width: 5px; border-color: #000080 #4166f5 #000080 #4166f5; font-family: 'Agency FB'; font-variant: normal; text-transform: inherit;">
        <div class="row" style="height:10px">
            <img alt="" src="~/Images/golfer-black.png" style="width: 155px; height: 139px; margin-left:-10px; margin-top:-25px" />
        </div>
        <h1 style="font-size: 40pt"><strong style="font-family: 'Agency FB'; color: #000080;">Place Order</strong></h1>
        <p style="font-size: x-large; color: #4166F5;">Please complete this form to finish your order.</p>
    </div>
    <div class="container">
        <div class="row text-center">
            <h2>Step 1 - Select Address:</h2>
            @Html.DropDownListFor(model => model.AddressID, ViewBag.listAddresses as List<SelectListItem>, null, new { onchange = "selectedAddress(this);" })
        </div>
        <div class="row">
            <div class="col-md-10"></div>
            <div id="savebutton">
                <input type="submit" value="Save" style="font-family:'Agency FB'; font-weight: bold; font-size: 15pt;" />
            </div>
        </div>
        <div id="createPartial" class="hidden">
            @Html.Partial("AddNewAddress");
        </div>
    </div>
}

<script type="text/javascript" src="js/jquery/jquery.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
@section scripts{
    <script>
        function selectedAddress(test) {
            if (test.value == "Enter new address") {
                $('#createPartial').removeClass("hidden");
                $('#savebutton').addClass("hidden");
            }
            else {
                $('#createPartial').addClass("hidden");
                $('#savebutton').removeClass("hidden");
            }

        }
        function foo() {
            window.alert("foo");
        }
    </script>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
